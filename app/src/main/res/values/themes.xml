<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LabelsPrinting" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/regular</item>
        <item name="colorControlHighlight">@color/TemplateMidGrey</item>
        <item name="colorStateNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemNormal">@color/athens_gray</item>
        <!--        <item name="drawableNavigationItemBackground">@drawable/menu_item_background_color_state</item>-->
        <item name="android:listDivider">@color/shuttle_gray</item>

    </style>

    <style name="textMediumStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textFont</item>
        <item name="android:textAppearance">@style/FontMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="FontRegular">
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="FontBold">
        <item name="fontFamily">@font/bold</item>
    </style>

    <style name="FontMedium">
        <item name="fontFamily">@font/medium</item>
    </style>

    <style name="textRegularStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textFont</item>
        <item name="android:textAppearance">@style/FontRegular</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="Widget.Template.TextInputLayout.Primary" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/textFont2</item>
        <item name="strokeWidth">1dp</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_4sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_4sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_4sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_4sdp</item>
    </style>

    <style name="loginTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:textColorHint">@color/purple_700</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_8sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_8sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_8sdp</item>
        <item name="boxStrokeColor">@color/purple_500</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>

    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorStateNavigationItem</item>
        <item name="itemTextAppearance">@style/TextAppearance.Custom.Navigation.Item</item>
        <item name="itemTextColor">?attr/colorStateNavigationItem</item>
        <!--        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>-->
    </style>

    <style name="TextAppearance.Custom.Navigation.Item" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="BaseLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/purple_200</item>
    </style>

    <style name="SmallIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!--  Round ShapeableImageView  -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
        <item name="backgroundColor">@color/white</item>
    </style>


</resources>